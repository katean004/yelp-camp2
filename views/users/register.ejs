<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-6 offset-3">
    <h1>Register</h1>
    <form action="/register" class="validated-form" novalidate method="POST">
      <!-- username -->
      <div class="mb-3">
        <label class="form-label" for="username">Enter Username:</label>
        <input
          class="form-control"
          type="text"
          id="username"
          name="username"
          required
        />
        <div class="invalid-feedback">Please enter username.</div>
      </div>
      <!-- email -->
      <div class="mb-3">
        <label class="form-label" for="email">Enter Email:</label>
        <input
          class="form-control"
          type="email"
          id="email"
          name="email"
          required
        />
        <div class="invalid-feedback">Please enter email.</div>
      </div>
      <!-- password -->
      <div class="mb-3">
        <label class="form-label" for="password">Enter password:</label>
        <input
          class="form-control"
          type="password"
          id="password"
          name="password"
          required
        />
        <div class="invalid-feedback">Please enter password.</div>
      </div>
      <button class="btn btn-success">Register</button>
    </form>
  </div>
</div>
